<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Typo -->
    <style name="TypoHeader" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/speedee_bold</item>
    </style>

    <style name="TypoBody" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/speedee_regular</item>
    </style>

    <style name="TypoHeader.H1">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TypoHeader.H2">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TypoHeader.H3">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TypoHeader.H4">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TypoBody.SubHeader">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Chips -->
    <style name="FilterChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/filter_chip_background_tint</item>
        <item name="chipStrokeColor">@color/filter_chip_stroke_tint</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="fontFamily">@font/speedee_regular</item>
        <item name="minWidth">60dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Dialog -->
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--Toolbar-->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarStyle.TextAppearance</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleMarginStart">0dp</item>
        <item name="elevation">6dp</item>
    </style>
    <style name="ToolbarStyle.WithNavigationIcon" parent="Widget.MaterialComponents.Toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back_ios_black</item>
        <item name="navigationIconTint">@color/black</item>
    </style>
    <style name="ToolbarStyle.WithCloseIcon" parent="Widget.MaterialComponents.Toolbar">
        <item name="navigationIcon">@drawable/ic_close</item>
        <item name="navigationIconTint">@color/black</item>
    </style>

    <style name="ToolbarStyle.TextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/speedee_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Buttons -->
    <style name="TextViewStyleButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">@font/speedee_regular</item>
    </style>
    <style name="MovieButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/green_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textAppearance">@style/TextViewStyleButton</item>
        <item name="rippleColor">?colorControlHighlight</item>
    </style>

</resources>